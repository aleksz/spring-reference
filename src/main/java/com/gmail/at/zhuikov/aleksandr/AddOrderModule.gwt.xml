<?xml version="1.0" encoding="UTF-8"?>
<module rename-to="add_order_module">
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User' />

  <!-- We need the JUnit module in the main module,               -->
  <!-- otherwise eclipse complains (Google plugin bug?)           -->
  <inherits name='com.google.gwt.junit.JUnit' />

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <inherits name='com.google.gwt.user.theme.standard.Standard' />
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

  <!-- Other module inherits                                      -->

<!--   <inherits name='com.em.validation.Validation' /> -->
  <inherits name='org.hibernate.validator.HibernateValidator' />
  <inherits name="com.flipthebird.GwtHashCodeEquals"/>
  <inherits name='com.google.gwt.editor.Editor'/>
  <inherits name="com.google.gwt.i18n.I18N"/>

  <!-- Specify the app entry point class.                         -->
  <entry-point class='com.gmail.at.zhuikov.aleksandr.client.AddOrderModule' />

  <!-- Specify the paths for translatable code                    -->
  <source path='client' />
  <source path='root/domain' />
  <super-source path="validator" />
<!--   <source path='shared' /> -->

  <replace-with
	  class="com.gmail.at.zhuikov.aleksandr.client.SampleValidatorFactory">
    <when-type-is class="javax.validation.ValidatorFactory" />
  </replace-with>
  
  <replace-with
	  class="com.gmail.at.zhuikov.aleksandr.client.ValidationMessageResolver">
    <when-type-is class="com.google.gwt.validation.client.UserValidationMessagesResolver" />
  </replace-with>
  
  <extend-property name="locale" values="en"/>
  <extend-property name="locale" values="ru"/>
  <set-property-fallback name="locale" value="en"/>
   
</module>
